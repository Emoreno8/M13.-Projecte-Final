        <activity android:name=".MenuEquip" />
        <activity android:name=".LoginEquip" />
        <activity android:name=".CrearEquip" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>